<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="here/main_template/macros/master"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"      
      i18n:domain="dexterity.membrane">        
      <head>
   		<metal:block fill-slot="style_slot">
      	<metal:block use-macro="here/@@xtshzz-policy-macros/macros/styles"/>
   		</metal:block>
		</head>
<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main" 
    	tal:define="text_to_html nocall:here/@@xtshzz-policy-macros/text_to_html">

       <section id="profile">
		<div id="ajaxreq" style="display: none" 
			tal:attributes="data-ajax-target string:${portal_url}/@@ajaxmemberstate"></div>
       	
       <div class="page-header">
           <h3 i18n:translate="">Member information</h3>           
       </div>  
       <div class="row">
				<table class="table table-striped table-bordered table-condensed col-md-12">
	        <thead>
          	<tr class="row">
            <th class="col-md-2" i18n:translate="">name</th>
            <th class="col-md-1" i18n:translate="">roles</th>
            <th class="col-md-2" i18n:translate="">email</th>
            <th class="col-md-2" i18n:translate="">register date</th>
            <th class="col-md-2" i18n:translate="">status</th>
            <th class="col-md-3" i18n:translate="">operations</th>                        
          	</tr>
        		</thead>
        		<tbody>
           <tal:block tal:repeat="lists python:view.getMemberList()">
             <tr class="row" tal:define="status python:lists['status']">
                  <td class="col-md-2">
                      <a tal:attributes="href python:lists['url']">
                         <span tal:content="python:lists['name']"></span>
                      </a>
                  </td>
                  <td class="col-md-1" >
                      <span tal:content="python:lists['roles']"></span>
                  </td>
                  <td class="col-md-2"  tal:content="python:lists['email']">
                  </td>
                  <td class="col-md-2"  tal:content="python:lists['register_date']">
                  </td>
                  <td class="col-md-2 handler">
 					         <input tal:condition="python:str(lists['status'])=='enabled'" type="checkbox" tal:attributes="id python:lists['id']" class="iphone-style-checkbox" checked="checked"/>
                    <input tal:condition="python:status=='disabled' or status=='pending'" type="checkbox" tal:attributes="id python:lists['id']" class="iphone-style-checkbox" />                                    	
                  </td>
                  <td class="col-md-3">
									<div i18n:domain="plone" class="row">
										<div class="col-md-6 text-center">
										<a tal:attributes="href python:lists['editurl']" class="link-overlay btn btn-success">
          							<i class="icon-pencil icon-white"></i>
          							<span tal:omit-tag="" i18n:translate="">Edit</span>
          						</a>
          						</div>
          						<div class="col-md-6 text-center">
  										<a tal:attributes="href python:lists['delurl']" class="link-overlay btn btn-danger">
          							<i class="icon-trash icon-white"></i>
          							<span tal:omit-tag="" i18n:translate="">Delete</span>
          						</a>
          						</div>
									</div>
                   </td>          
                  </tr>
               </tal:block>
        </tbody>
      </table>      
      </div>
      </section>
          
    </tal:main-macro>
</metal:main>
<metal:js fill-slot="javascript_bottom_slot">
			  <script type="text/javascript">

$(document).ready(function(){
//load overlay effect
// No overlays for IE6

	$('.handler').on('click','.iphone-style', function(){
		checkboxID = '#' + $(this).attr('rel');
		if ($(checkboxID)[0].checked == false) {
			var action = $("#ajaxreq").attr('data-ajax-target');
			var id = $(this).siblings('input').attr('id');
			var state = {'id': id,state: 'disabled'};			
			$(this).animate({backgroundPosition: '0% 100%'});
			$(checkboxID)[0].checked = true;
			$(this).removeClass('off').addClass('on');
			$.post(action, state, function(result){
				if (result) {}
				else {return false;}
			}, 'json');
		}else {
			var action = $("#ajaxreq").attr('data-ajax-target');
			var id = $(this).siblings('input').attr('id');
			var state = {'id': id, state: 'enabled'};
			$(this).animate({backgroundPosition: '100% 0%'});
			$(checkboxID)[0].checked = false;
			$(this).removeClass('on').addClass('off');			
			$.post(action, state, function(result){
				if (result) {	}
			else {return false;}
			}, 'json');
		}
	});

	$('.iphone-style-checkbox').each(function(){
		var thisID = $(this).attr('id');
		var thisClass = $(this).attr('class');
		switch (thisClass) {
			case "iphone-style-checkbox":
				setClass = "iphone-style";
				break;}
		$(this).addClass('hidden');
		if ($(this)[0].checked == true) 
			$(this).after('<span class="' + setClass + ' on" rel="' + thisID + '">&nbsp;</span>');
		else
			$(this).after('<span class="' + setClass + ' off" rel="' + thisID + '">&nbsp;</span>');
	});	
	})
</script>	
</metal:js>
</body>
</html>
